<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4FFFFFF"
    tools:context=".ClassUtama.Home">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_navigation" />

    <ImageView
        android:id="@+id/imgBgHeader"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="-20dp"
        android:contentDescription="@string/a"
        app:srcCompat="@drawable/bghead" />

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="90dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20px"
        android:layout_marginTop="-20px"
        app:srcCompat="@drawable/foto" />

    <TextView
        android:id="@+id/textNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250px"
        android:layout_marginTop="100px"
        android:fontFamily="sans-serif"
        android:text="Rizky Novayandi"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250px"
        android:layout_marginTop="150px"
        android:fontFamily="sans-serif"
        android:text="IF4 - 10117140"
        android:textColor="#7CFFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/imgBgButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/imgBgHeader"
        android:layout_centerInParent="true"
        android:layout_marginTop="-80dp"
        app:srcCompat="@drawable/bgbtnwhite1" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginTop="260px"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/about1"
        android:fontFamily="sans-serif"
        android:text="About Me"
        android:textAllCaps="false"
        android:textColor="#FF9800" />


    <Button
        android:id="@+id/btnFavFood"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="450px"
        android:layout_marginTop="260px"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/food1"
        android:fontFamily="sans-serif"
        android:text="Fav Food"
        android:textAllCaps="false"
        android:textColor="#FF9800" />

    <Button
        android:id="@+id/btnHobby"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="260px"
        android:layout_toEndOf="@+id/btnFavFood"
        android:layout_toRightOf="@+id/btnFavFood"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/hobby1"
        android:fontFamily="sans-serif"
        android:text="Interest"
        android:textAllCaps="false"
        android:textColor="#FF9800" />

    <ImageView
        android:id="@+id/imgBakso"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/imgBgButton"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/bakso" />

    <TextView
        android:id="@+id/textFavFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_below="@id/imgBgButton"
        android:layout_centerHorizontal="true"
        android:text="My Favorite Foods"
        android:textColor="#A8A9B2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textBakso"
        android:layout_width="wrap_content"
        android:layout_below="@id/imgBakso"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="70dp"
        android:text="Mie Bakso"
        android:textColor="#A8A9B2"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/imgNasiGoreng"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_below="@id/imgBgButton"
        android:layout_alignParentRight="true"
        android:layout_marginTop="27dp"
        android:layout_marginRight="0dp"
        app:srcCompat="@drawable/nasigorengpete" />

    <TextView
        android:id="@+id/textNasiGoreng"
        android:layout_width="wrap_content"
        android:layout_below="@id/imgBakso"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="-5dp"
        android:text="Nasi Goreng Pete"
        android:textColor="#A8A9B2"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/textFavDrinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textBakso"
        android:layout_centerHorizontal="true"
        android:text="My Favorite Drinks"
        android:textColor="#A8A9B2"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgGulaJawa"
        android:layout_width="200dp"
        android:layout_marginLeft="30dp"
        android:layout_height="200dp"
        android:layout_marginTop="-15dp"
        android:layout_below="@id/textFavDrinks"
        app:srcCompat="@drawable/gulajawa" />
    <TextView
        android:id="@+id/textGulaJawa"
        android:layout_width="wrap_content"
        android:layout_below="@id/imgGulaJawa"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="75dp"
        android:text="Gula Jawa"
        android:textColor="#A8A9B2"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/imgJusMangga"
        android:layout_width="190dp"
        android:layout_alignParentRight="true"
        android:layout_height="195dp"
        android:layout_below="@id/textFavDrinks"
        android:layout_marginTop="-15dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/smoothie" />
    <TextView
        android:id="@+id/textJusMangga"
        android:layout_width="wrap_content"
        android:layout_below="@id/imgJusMangga"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="230dp"
        android:text="Mango Juice"
        android:textColor="#A8A9B2"
        android:textSize="12sp"/>
</RelativeLayout>
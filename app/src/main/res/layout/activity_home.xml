<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4FFFFFF"
    tools:context=".ClassUtama.Home">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:menu="@menu/bottom_navigation" />

    <ImageView
        android:id="@+id/imgBgHeader"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="-20dp"
        android:contentDescription="@string/a"
        app:srcCompat="@drawable/bghead" />

    <ImageView
        android:id="@+id/imgFoto"
        android:layout_width="90dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20px"
        android:layout_marginTop="-20px"
        app:srcCompat="@drawable/foto" />

    <TextView
        android:id="@+id/textNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250px"
        android:layout_marginTop="100px"
        android:fontFamily="sans-serif"
        android:text="Rizky Novayandi"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250px"
        android:layout_marginTop="150px"
        android:fontFamily="sans-serif"
        android:text="IF4 - 10117140"
        android:textColor="#7CFFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/imgBgButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@id/imgBgHeader"
        android:layout_centerInParent="true"
        android:layout_marginTop="-80dp"
        app:srcCompat="@drawable/bgbtnwhite1" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150px"
        android:layout_marginTop="260px"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/about1"
        android:fontFamily="sans-serif"
        android:text="About Me"
        android:textAllCaps="false"
        android:textColor="#FF9800" />


    <Button
        android:id="@+id/btnFavFood"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="450px"
        android:layout_marginTop="260px"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/food1"
        android:fontFamily="sans-serif"
        android:text="Fav Food"
        android:textAllCaps="false"
        android:textColor="#FF9800" />

    <Button
        android:id="@+id/btnHobby"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="260px"
        android:layout_toEndOf="@+id/btnFavFood"
        android:layout_toRightOf="@+id/btnFavFood"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/hobby1"
        android:fontFamily="sans-serif"
        android:text="Interest"
        android:textAllCaps="false"
        android:textColor="#FF9800" />

    <ImageView
        android:id="@+id/imgHelp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/help" />

    <TextView
        android:id="@+id/textHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgHelp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:text="Need a Help?"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textBodyHelp"
        android:layout_width="125dp"
        android:layout_height="42dp"
        android:layout_below="@id/textHelp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"

        android:text="We will give directions to the new user"
        android:textColor="#A8A9B2"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnContact"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textBodyHelp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:text="Contact me" />
</RelativeLayout>